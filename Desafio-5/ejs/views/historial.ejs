<h2 style="color:crimson;">Historial</h2>

<% if(productos.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Titulo</th> <th>Precio</th> <th>Imagen</th> <th>ID</th></tr>
            <% for (const producto of productos) {%>
            <tr>
                <td><%=producto.title%></td>
                <td><%=producto.price%></td>
                <td><img style="width: 80px;" src="<%=producto.thumbnail%>", alt="sin imagen"></td>
                <td><%=producto.id%></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">No hay productos</h3>
<% } %>